<Window x:Class="WpfSql2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSql2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF981F1F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Customers" Content="Customers" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" Height="85" Width="304" Click="Customers_Click" FontSize="20" FontWeight="Bold" Background="#FFFDFAFA"/>
        <Button x:Name="Providers" Content="Providers" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" Height="82" Width="305" Click="Providers_Click" FontSize="20" FontWeight="Bold" Background="#FF1037F4"/>
        <Button x:Name="Orders" Content="Orders" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Height="78" Width="305" Click="Orders_Click" FontSize="20" FontWeight="Bold" Background="#FFDD3F13"/>

    </Grid>
</Window>
