<Window x:Class="WpfSql2.Windows.Providers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSql2.Windows"
        mc:Ignorable="d"
        Title="Providers" Height="450" Width="800">
    <Grid x:Name="LoadForm" Loaded="LoadForm_Loaded">
        <DataGrid x:Name="ProvidersView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,107"/>
        <Button x:Name="Update" Content="Update" HorizontalAlignment="Left" Margin="84,365,0,0" VerticalAlignment="Top" Cursor="AppStarting" Click="Update_Click"/>
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="181,365,0,0" VerticalAlignment="Top" Height="30" Width="62" Click="Add_Click"/>
        <Button x:Name="Delete" Content="DELETE" HorizontalAlignment="Left" Margin="655,350,0,0" VerticalAlignment="Top" Height="45" Width="75" Click="Delete_Click"/>

    </Grid>
</Window>
