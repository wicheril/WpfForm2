<Window x:Class="WpfSql2.Windows.Orders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSql2.Windows"
        mc:Ignorable="d"
        Title="Orders" Height="450" Width="800">
    <Grid x:Name="LoadForm" Loaded="LoadForm_Loaded">
        <DataGrid x:Name="OrdersView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,135"/>
        <Button x:Name="Update" Content="Update" HorizontalAlignment="Left" Margin="84,355,0,0" VerticalAlignment="Top" Click="Update_Click" Height="34" Width="72"/>
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="210,355,0,0" VerticalAlignment="Top" Height="34" Width="63" Click="Add_Click"/>
        <Button x:Name="Delete" Content="DELETE" HorizontalAlignment="Left" Margin="626,342,0,0" VerticalAlignment="Top" Height="50" Width="99" Click="Delete_Click"/>

    </Grid>
</Window>
